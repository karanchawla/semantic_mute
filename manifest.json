{
    "manifest_version": 3,
    "name": "Semantic Mute",
    "version": "0.1.0",
    "description": "Intelligently mute unwanted content on Twitter using AI-powered semantic analysis.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "author": "Your Name",
    "homepage_url": "https://github.com/karanchawla/semantic_mute",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://api.openai.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "db.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}